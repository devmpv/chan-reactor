{
  "name": "chan-reactor",
  "version": "0.1.0",
  "description": "ChanReactor application",
  "repository": {
    "type": "git",
    "url": "https://github.com/devmpv/chan-reactor"
  },
  "keywords": [
    "rest",
    "hateoas",
    "spring",
    "data",
    "react"
  ],
  "author": "devmpv",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/devmpv/chan-reactor/issues"
  },
  "homepage": "https://github.com/devmpv/chan-reactor",
  "dependencies": {
    "react": "^15.4.0",
    "react-dom": "^15.4.0",
    "react-dropzone": "^3.8.0",
    "react-router": "^3.0.0",
    "rest": "^1.3.1",
    "webpack": "^1.13.3"
  },
  "scripts": {
    "watch": "webpack --watch -d",
    "flow": "flow; test $? -eq 0 -o $? -eq 2"
  },
  "eslintConfig": {
    "plugins": [
      "react"
    ],
    "globals": {
      "React": true,
      "ReactDOM": true
    },
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "sourceType": "module"
    },
    "rules": {
      "react/jsx-uses-react": "error",
      "react/jsx-uses-vars": "error"
    }
  },
  "devDependencies": {
    "babel-core": "^6.18.2",
    "babel-loader": "^6.2.8",
    "babel-polyfill": "^6.16.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "eslint": "^3.12.2",
    "eslint-plugin-react": "^6.8.0",
    "flow-bin": "^0.37.4"
  }
}
